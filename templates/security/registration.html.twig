{% extends 'base.html.twig' %}
{% block title %}PetAdopt' : Inscription{% endblock %}
{% block head %}
	<header class="header banner" id="header-perso3">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<a href=""><img src="Public/img/logo.png" alt="" id="logo2"></a>
				</div>
			</div>
		</div>
	</header>
{% endblock %}
{% block body %}
	<div class="container">
		<div class="card card-register mx-auto mt-5">
			<div class="card-header">Register an Account</div>
			<div class="card-body">
				<form method="post" action="{{path('registration')}}">
					{{ form_start(form) }}
					<?php include('errors.php'); ?>
					<div class="form-group">
						<div class="form-row">
							<div class="col-md-12">
								{{ form_row(form.username, {'Label': 'name','attr':{'placeholder' :'Votre pseudo'}}) }}
							</div>
						</div>
						<div class="form-group">
							{{ form_row(form.email, {'Label': 'email','attr':{'placeholder' :'Votre email'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="form-row">
							<div class="col-md-6">
								{{ form_row(form.password.first, {'attr':{'placeholder' :'Votre mot de passe'}}) }}
							</div>
							<div class="col-md-6">
								{{ form_row(form.password.second, {'attr':{'placeholder' :'Confirmation du mot de passe'}}) }}
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-primary btn-block" name="reg_user">Register</button>
					{{ form_end(form) }}
				</form>
				<div class="text-center">
					<a class="d-block small mt-3" href="{{path('login')}}">Login Page</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}