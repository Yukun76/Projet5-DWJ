{% extends 'base.html.twig' %}

{% block body %}

<h1>Inscription</h1>

{{ form_start(form) }}
{{ form_row(form.username, {'Label': 'Name','attr':{'placeholder' :'Votre pseudo'}}) }}
{{ form_row(form.email, {'Label': 'email','attr':{'placeholder' :'Votre email'}}) }}
{{ form_row(form.password, {'Label': 'password','attr':{'placeholder' :'Votre mot de passe'}}) }}
{{ form_row(form.confirm_password, {'Label': 'confirm password','attr':{'placeholder' :'Confirmation du mot de passe'}}) }}
<button type="submit" class="btn btn-success">Validez</button>
{{ form_end(form) }}


{% endblock %}
