<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Adminitration{% endblock %}</title>
		{% block stylesheets %}
			<link href="https://fonts.googleapis.com/css?family=Cormorant+Garamond|Crimson+Text|Indie+Flower|Lato|Berkshire+Swash|Tangerine|Roboto|Roboto+Slab|Ubuntu|Sail|Zilla+Slab+Highlight" rel="stylesheet">
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
			<link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css" />
			<link rel="stylesheet" type="text/css" href="../css/style.css" />

			<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
		{% endblock %}
	</head>
	<body class="admin_body">
		{% block head %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top justify-content-end">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAdminMarkup" aria-controls="navbarNavAdminMarkup" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavAdminMarkup">
					<div class="wrapper">
						<aside class="main_sidebar">
							<div class="sidebar left ">
								<div class="user-panel">
									<div class="pull-left image">
										<img src="../img/users.jpg" class="rounded-circle" alt="User Image">
									</div>
									<div class="pull-left info">
										<p>{{ app.user.getUsername() }}</p>
										<a href="#"><i class="fa fa-circle text-success"></i> Online</a>
									</div>
								</div>
								<ul>
									<p id="admin_title" style="color: red; margin-left: 10px;"> â–¼ ADMINISTRATION </p>
									<li><i class="fa fa-home"></i><a href="/">Accueil</a></li>
									<li><i class="fa fa-users" aria-hidden="true"></i><a href="{{path('utilisateurs')}}">Utilisateurs</a></li>
									<li><a href="{{path('annonce')}}"><i class="fa fa-newspaper-o" aria-hidden="true"></i>Annonces</a></li>
									<li><i class="fa fa-paw" aria-hidden="true"></i><a href="{{path('animal')}}">Animaux</a></li>
									<li><i class="fa fa-paw" aria-hidden="true"></i><a href="{{path('reservation')}}">Reservations</a></li>
									<div class="dropdown-divider"></div>
									<li><i class="fa fa-sign-out" aria-hidden="true"></i><a href="{{path('logout')}}"> Logout</a></li>
								</ul>
							</div>
						</aside>
					</div>
				</div>
			</nav>
		{% endblock %}
		<div class="container" id="right_contain">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					{% block body %}
					{% endblock %}
				</div>
			</div>
		</div>
		{% block footer %}{% endblock %}
		{% block javascripts %}
			<script src="public/js/jquery.js"></script>
		{% endblock %}
	</body>
</html>