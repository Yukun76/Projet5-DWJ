{% extends 'homeShowBase.html.twig' %}
{% block title %}PetAdopt' : Home - Adopter un animal de compagnie !{% endblock %}
{% block head %}{% endblock %}
{% block body %}
	<h1 id="titre_principal"> Adopter en un.</h1>
	<div class="Liste_adoption">
		<article>
			<hr class="hr_liste">
			<div class="zoomInUp">
				<div class="flex-container">				
					{% for ad in ads %}				
						<div class="card" id="card_accueil">
							<img class="card-img-top" src="{{ asset('uploads/animals/' ~ ad.image) }}" alt="Card image">
							<div class="card-body">
								<h4 class="card-title">{{ ad.title }}</h4>
								<div class="metadata">
									<p><b>Publié le {{ ad.createdAt | date('d/m/Y') }} à {{ ad.createdAt | date('H:i') }}</b></p>
								</div>
								<p class="card-text">{{ ad.content[:100] ~ '...'  }}</p>
								<a href="{{path('ad_show', { 'id': ad.id})}}" class="btn btn-primary">Lire la suite</a>
							</div>
						</div>
					{% endfor %}					
				</div>
			</div>
			<div class="navigation">
				{{ knp_pagination_render(ads) }}
			</div>
			<hr class="hr_liste">
		</article>
	</div>
{% endblock %}