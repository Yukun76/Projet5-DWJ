{% extends 'base.html.twig' %}
{% block title %}Home : Adopter un animal de compagnie !{% endblock %}
{% block head %}
	<div class="header banner" id="header-perso">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<p  id="logo_text"> Adopter un compagnon de vie.</p>
				</div>
			</div>
		</div>
	</div>
	<div class="barre_recherche">
		<div class="container">
			<nav class="navbar navbar-expand-lg" id="nav_admin">
				<div class="navbar-nav" id="renseignement">
					<form id="form_renseignement" method="get" action="">
						{{ form_start(form) }}							
						{{ form_row(form.type)}}
						{{ form_row(form.sexe) }}
						{{ form_row(form.region) }}
						{{ form_end(form) }}
					</form>					
				</div>
			</nav>
		</div>
	</div>
{% endblock %}
{% block body %}
	<h1 id="titre_principal"> Adopter en un ! </h1>
	<div class="Liste_adoption">
		<ad>
			{% for ad in ads %}
				<hr class="hr_liste">
				<h2>{{ ad.title }}</h2>
				<div class="metadata">	
					Publié le {{ ad.createdAt | date('d/m/Y') }} à {{ ad.createdAt | date('H:i') }}
				</div>
				<div class="content">
					<img src="{{ ad.image }}" alt="photo animal">
					{{ ad.content }}
					<a href="#" class="btn btn-primary">Lire La suite...</a>
				</div>
			{% endfor %}
		</ad>
	</div>
{% endblock %}
