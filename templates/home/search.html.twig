{% extends 'base.html.twig' %}

{% block title %} PetAdopt' : Liste d'adoption{% endblock %}

{% block head %}
	<div class="header banner" id="header-perso">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<p  id="logo_text"> Adopter un compagnon de vie.</p>
				</div>
			</div>
		</div>
	</div>
	<div class="barre_recherche">
		<div class="container">
			<nav class="navbar navbar-expand-lg" id="nav_admin">
				<div class="navbar-nav" id="renseignement">					
						{{ form_start(search) }}				
							{{ form_row(search.type) }}
							{{ form_row(search.sexe) }}
							{{ form_row(search.region) }}
						{{ form_end(search) }}							
				</div>
			</nav>
		</div>
	</div>
{% endblock %}

{% block body %}
 	<h1> Liste d'adoption personalis√©e :</h1>
 		<article>
			{% for animal in animals %}
				<hr class="hr_liste">
				{{ animal.name }}
				{{ animal.type }}
				{{ animal.sexe }}
				{{ animal.region.id }}
			{% endfor %}
		</article>
{% endblock %}
